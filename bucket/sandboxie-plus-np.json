    "homepage": "https://sandboxie-plus.com/",
    "description": "A open source sandbox-based isolation software",
    "architecture": {
        "64bit": {
            "url": "https://github.com/sandboxie-plus/Sandboxie/releases/download/1.0.11/Sandboxie-Plus-x64-v1.0.11.exe#/setup.exe",
            "hash": "764a3d7ae3e03389a7981ae791c1204c31e06e2a47c5276db80c3f4a1572e136"
        },
        "32bit": {
            "url": "https://github.com/sandboxie-plus/Sandboxie/releases/download/1.0.11/Sandboxie-Plus-x86-v1.0.11.exe#/setup.exe",
            "hash": "b6674adb5602f744ee30a9c3777f3c906bac0781206cfc4710fde7b311e013f6"
        }
    },
    "extract_dir": "sandboxie-plus",
    "pre_install": [
        "if (!(is_admin)) {",
        "    error \"Administrator rights are required to install $app.\"",
        "    exit 1",
        "}"
    ],
    "installer": {
        "file": "setup.exe",
        "args": [
            "/suppressmsgboxes",
            "/verysilent",
            "/dir=\"$dir\"",
            "/norestart",
            "/noicons"
        ]
    },
    "uninstaller": {
        "script": [
            "if (!(is_admin)) {",
            "    error \"Administrator rights are required to uninstall $app.\"",
            "    exit 1",
            "}",
            "Stop-Process -ErrorAction Ignore -Name SandMan -Force",
            "Stop-Process -ErrorAction Ignore -Name SbieSvc -Force",
            "Remove-Service -Name \"SbieSvc\"",
            "& \"$dir\\unins000.exe\" /verysilent /nocancel /norestart /suppressmsgboxes"
        ]
    },
    "shortcuts": [
        [
            "SandMan.exe",
            "Sandboxie-Plus"
        ]
    ],
    "checkver": {
        "github": "https://github.com/sandboxie-plus/Sandboxie"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/sandboxie-plus/Sandboxie/releases/download/$version/Sandboxie-Plus-x64-v$version.exe#/setup.exe"
            },
            "32bit": {
                "url": "https://github.com/sandboxie-plus/Sandboxie/releases/download/$version/Sandboxie-Plus-x86-v$version.exe#/setup.exe"
            }
        }
    }
}
