            "hash": "57b846a6c7211ae11ad431970f696223ef039561c1257245f49d6bcc5be09b5f"
        },
        "32bit": {
            "url": "https://github.com/sandboxie-plus/Sandboxie/releases/download/1.0.22/Sandboxie-Plus-x86-v1.0.22.exe#/setup.exe",
            "hash": "5ca1dc88d36173de807e3a3460401e7a4f295d34866fd07801c3e3937c057a55"
        }
    },
    "extract_dir": "sandboxie-plus",
    "pre_install": [
        "if (!(is_admin)) {",
        "    error \"Administrator rights are required to install $app.\"",
        "    exit 1",
        "}"
    ],
    "installer": {
        "file": "setup.exe",
        "args": [
            "/suppressmsgboxes",
            "/verysilent",
            "/dir=\"$dir\"",
            "/norestart",
            "/noicons"
        ]
    },
    "uninstaller": {
        "script": [
            "if (!(is_admin)) {",
            "    error \"Administrator rights are required to uninstall $app.\"",
            "    exit 1",
            "}",
            "Stop-Process -ErrorAction Ignore -Name SandMan -Force",
            "Stop-Process -ErrorAction Ignore -Name SbieSvc -Force",
            "Remove-Service -Name \"SbieSvc\"",
            "& \"$dir\\unins000.exe\" /verysilent /nocancel /norestart /suppressmsgboxes"
        ]
    },
    "shortcuts": [
        [
            "SandMan.exe",
            "Sandboxie-Plus"
        ]
    ],
    "checkver": {
        "github": "https://github.com/sandboxie-plus/Sandboxie"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/sandboxie-plus/Sandboxie/releases/download/v$version/Sandboxie-Plus-x64-v$version.exe#/setup.exe"
            },
            "32bit": {
                "url": "https://github.com/sandboxie-plus/Sandboxie/releases/download/v$version/Sandboxie-Plus-x86-v$version.exe#/setup.exe"
            }
        }
    }
}
