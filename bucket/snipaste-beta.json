{
    "homepage": "https://bitbucket.org/liule/snipaste/downloads/?tab=downloads",
    "version": "2.7.2-Beta",
    "license": "Freeware",
    "description": "Snip & Paste, a simple but powerful snipping tool.",
    "architecture": {
        "64bit": {
            "url": "https://bitbucket.org/liule/snipaste/downloads/Snipaste-2.7.2-Beta-x64.zip",
            "hash": "sha1:01f4794b7c0646aff78d53c4e12994caffb77237"
        },
        "32bit": {
            "url": "https://bitbucket.org/liule/snipaste/downloads/Snipaste-2.7.2-Beta-x86.zip",
            "hash": "sha1:41c525f5002ae77804a2edeb6806a22d6950ab16"
        }
    },
    "pre_install": "if (!(Test-Path \"$persist_dir\\config.ini\")) { Set-Content \"$dir\\config.ini\" '' -Encoding ASCII }",
    "persist": [
        "history",
        "config.ini"
    ],
    "bin": "Snipaste.exe",
    "shortcuts": [
        [
            "Snipaste.exe",
            "Snipaste"
        ]
    ],
    "suggest": {
        "vcredist": "extras/vcredist2015"
    },
    "checkver": {
        "regex": "(?sm)Snipaste.*?(?<main>[\\d.]+)-Beta-(?<build>\\d+)?",
        "replace": "${main}-Beta${build}"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://bitbucket.org/liule/snipaste/downloads/Snipaste-$matchMain-Beta$matchBuild-x64.zip",
                "hash": {
                    "url": "https://dl.snipaste.com/sha-1.txt",
                    "regex": "$sha1.*?x64.zip"
                }
            },
            "32bit": {
                "url": "https://bitbucket.org/liule/snipaste/downloads/Snipaste-$matchMain-Beta$matchBuild-x86.zip",
                "hash": {
                    "url": "https://dl.snipaste.com/sha-1.txt",
                    "regex": "$sha1.*?x86.zip"
                }
            }
        }
    }
}
